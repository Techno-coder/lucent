{
	"name": "vscode-lucent",
	"author": "Technocoder",
	"version": "0.1.0",
	"license": "MIT",
	"main": "build/extension",
	"activationEvents": ["onLanguage:lucent"],
	"contributes": {
		"languages": [
			{
				"id": "lucent",
				"configuration": "language-configuration.json",
				"aliases": ["Lucent", "lucent"],
				"extensions": [".lc"]
			}
		],
		"configuration": {
			"title": "Lucent",
			"properties": {
				"lucent.compiler.path": {
					"type": "string",
					"description": "Specifies the path of the Lucent compiler binary."
				}
			}
		},
		"configurationDefaults": {
			"[lucent]": {
				"editor.insertSpaces": false,
				"editor.tabSize": 4
			}
		},
		"semanticTokenScopes": [
			{
				"language": "lucent",
				"scopes": {
					"variable": ["entity.name"],
					"type": ["entity.name.type"],
					"module": ["entity.name.namespace"],
					"function": ["entity.name.function"],
					"constant": ["variable.other.constant"],
					"property": ["variable.other.property"],
					"global": ["variable.other.global"]
				}
			}
		]
	},
	"engines": {"vscode": "^1.43.0"},
	"dependencies": {"vscode-languageclient": "^6.1.3"},
	"scripts": {
		"vscode:prepublish": "yarn --ignore-engines run compile",
		"compile": "tsc -b"
	},
	"devDependencies": {
		"@types/vscode": "1.43.0",
		"@types/node": "^12.12.0",
		"typescript": "^4.0.2"
	}
}